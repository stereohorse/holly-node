html(lang='ru')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    title Холли

    link(href='/bower/bootstrap/dist/css/bootstrap.min.css' rel='stylesheet')
  body
    br

    .row
      .col-md-2
      .col-md-8
        .list-group
          each video in videos
            button.list-group-item(
              type='button' 
              data-toggle='modal' 
              data-target='#video-player' 
              data-video-id=video.id
              data-video-type=video.type
              data-video-title=video.title)= video.title
          else
            p Здесь пока ничего нет
      .col-md-2

    .modal.fade(tabindex='-1' role='dialog' id='video-player')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
            h4.modal-title
          .modal-body
            video#videojs-player.video-js.vjs-default-skin 
          .modal-footer
            button.btn.btn-default(type='button' data-dismiss='modal') Закрыть

    script(src='/bower/jquery/dist/jquery.min.js')
    script(src='/bower/bootstrap/dist/js/bootstrap.min.js')

    script(src='/bower/video.js/dist/video.min.js')

    script(src='/static/index.js')
